void DrawMatrix(const int(&matrix)[rows][cols]) {
    const int otstup = 5;
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            switch (matrix[i][j]) {
            case 1:
                DrawRectangle(j * (cellSize+otstup), i * (cellSize + otstup), cellSize, cellSize, DARKBLUE);
                
                break;
            case 2:
                DrawRectangle(j * (cellSize + otstup), i * (cellSize + otstup), cellSize, cellSize, RED);
                break;
            case 3:
                DrawRectangle(j * (cellSize + otstup), i * (cellSize + otstup), cellSize, cellSize, GREEN);
                break;
            default:
                DrawRectangle(j * (cellSize + otstup), i * (cellSize + otstup), cellSize, cellSize, WHITE);
                break;
            }
        }
    }
}



void drawenemy1()
{

}
int main() {
    InitWindow(800, 600, "Game");
    SetTargetFPS(60);
    bool show1 = true;
    bool show2 = false;
    bool show3 = false;
    while (!WindowShouldClose()) {

        if (IsKeyPressed(KEY_X)) {
            show1 = !show1;
        }
        if (IsKeyPressed(KEY_C)) {
            show2 = !show2;
        }
        if (IsKeyPressed(KEY_V)) {
            show3 = !show3;
        }

        BeginDrawing();
        ClearBackground(DARKGRAY);

        if (show1) {
            DrawMatrix(matrix1);
        }
        if (show2) {
            DrawMatrix(matrix2);
        }
        if (show3) {
            DrawMatrix(matrix3);
        }
        EndDrawing();
    }

    CloseWindow();
    return 0;
}
